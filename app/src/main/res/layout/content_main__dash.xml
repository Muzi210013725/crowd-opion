<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    android:weightSum="1">

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content">

          <TableLayout
              android:layout_width="match_parent"
              android:layout_height="594dp"
              android:layout_marginTop="0dp">

              <ImageView
                 android:layout_width="match_parent"
                 android:layout_height="50dp"
                 android:clickable="false"
                 android:paddingRight="285dp"
                 android:src="@mipmap/home"/>

              <TableRow
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content">

                  <Button
                      android:id="@+id/btn_profile"
                  style="@style/DashboardButton"
                  android:layout_margin="7dp"
                  android:drawableTop="@mipmap/prof"
                  android:text="Profile"
                  android:layout_width="90dp"
                  android:layout_height="wrap_content"
                      android:layout_column="0" />

                  <Button
                      android:id="@+id/btnNew"
                      style="@style/DashboardButton"
                      android:layout_margin="7dp"
                      android:drawableTop="@mipmap/whatsnew"
                      android:text="Whats New"
                      android:layout_width="90dp"
                      android:layout_height="wrap_content"
                      android:layout_gravity="right"
                      android:layout_column="16" />

                  <Button
                      android:id="@+id/btn_promo"
                      style="@style/DashboardButton"
                      android:layout_margin="10dp"
                      android:drawableTop="@mipmap/promo"
                      android:text="Promotions"
                      android:layout_width="10dp"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center_horizontal"
                      android:layout_column="17" />

              </TableRow>

              <TableRow
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">

                  <Button
                  android:id="@+id/btn_wishlist"
                  style="@style/DashboardButton"
                  android:layout_margin="7dp"
                  android:drawableTop="@mipmap/wis"
                  android:text="WISHLIST"
                  android:layout_width="110dp"
                  android:layout_height="wrap_content"
                  android:layout_column="0" />

                  <Button
                      android:id="@+id/btn_setting"
                      style="@style/DashboardButton"
                      android:layout_margin="7dp"
                      android:drawableTop="@mipmap/set"
                      android:text="SETTINGS"
                      android:layout_width="90dp"
                      android:layout_height="wrap_content"
                      android:layout_gravity="right"
                      android:layout_column="16" />

                  <Button
                      android:id="@+id/btn_redeem"
                      style="@style/DashboardButton"
                      android:layout_margin="10dp"
                      android:drawableTop="@mipmap/red"
                      android:text="REDEEM"
                      android:layout_width="110dp"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center_horizontal"
                      android:layout_column="17" />
              </TableRow>


              <TableRow
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content">
                  <Button
                      android:id="@+id/btn_survey"
                      style="@style/DashboardButton"
                      android:layout_margin="7dp"
                      android:drawableTop="@mipmap/surv"
                      android:text="SURVEY"
                      android:layout_width="110dp"
                      android:layout_height="wrap_content"
                      android:layout_column="0" />

                  <Button
                      android:id="@+id/btn_new"
                      style="@style/DashboardButton"
                      android:layout_margin="7dp"
                      android:drawableTop="@mipmap/point"
                      android:text="POINTS"
                      android:layout_width="102dp"
                      android:layout_height="wrap_content"
                      android:layout_gravity="right"
                      android:layout_column="16" />

                  <Button
                      android:id="@+id/btn_noti"
                      style="@style/DashboardButton"
                      android:layout_margin="7dp"
                      android:drawableTop="@mipmap/noti"
                      android:text="NOTIFICATION"
                      android:layout_width="90dp"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center_horizontal"
                      android:layout_column="17" />

              </TableRow>

              <TableRow
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">

              </TableRow>
          </TableLayout>

      </LinearLayout>


          <LinearLayout
              android:layout_width="202dp"
              android:layout_height="match_parent"
              android:weightSum="3"
              android:orientation="horizontal">


          </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">
      </LinearLayout>

</LinearLayout>
